<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<featureModel>
    <properties/>
    <struct>
        <and abstract="true" mandatory="true" name="xz">
            <alt abstract="true" mandatory="true" name="format">
                <feature name="xz / standard"/>
                <feature name="lzma"/>
                <feature name="raw"/>
            </alt>
            <alt abstract="true" mandatory="true" name="operation mode">
                <and abstract="true" name="compress">
                    <alt abstract="true" mandatory="true" name="compression level">
                        <feature name="numeric levels">
                            <description>
1-9 compression intensity
</description>
                        </feature>
                        <feature name="extreme">
                            <description>
much more compressed mode
</description>
                        </feature>
                    </alt>
                    <alt abstract="true" mandatory="true" name="blocks">
                        <feature name="block-list">
                            <description>
it is allowed to set a sequence of blocks instead
</description>
                        </feature>
                        <feature name="block-size">
                            <description>
there is a default block size, which will be choosen
otherwise it can differ
</description>
                        </feature>
                    </alt>
                    <feature name="flush-timeout"/>
                    <feature name="memlimit"/>
                    <feature name="no-adjust"/>
                    <feature mandatory="true" name="threads"/>
                </and>
                <feature abstract="true" name="decompress"/>
                <feature abstract="true" name="test"/>
                <feature abstract="true" name="list"/>
            </alt>
            <and abstract="true" mandatory="true" name="operation modifiers">
                <feature name="force"/>
                <feature name="no sparse"/>
                <feature name="suffix"/>
                <alt abstract="true" mandatory="true" name="files">
                    <feature name="file"/>
                    <feature name="file0"/>
                    <feature name="stdout"/>
                </alt>
                <feature name="keep"/>
            </and>
            <and abstract="true" name="Other options">
                <feature name="verbose"/>
                <feature name="no-warn"/>
                <feature name="info-memory"/>
                <feature name="version"/>
                <feature name="help"/>
                <feature name="long-help"/>
            </and>
        </and>
    </struct>
    <constraints>
        <rule>
            <imp>
                <var>stdout</var>
                <var>keep</var>
            </imp>
        </rule>
    </constraints>
    <calculations Auto="true" Constraints="true" Features="true" Redundant="true" Tautology="true"/>
    <comments/>
    <featureOrder userDefined="false"/>
</featureModel>
